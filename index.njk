{% extends "_includes/default.njk" %}
{% block title %}It does work{% endblock %}
{% block content %}
  <!-- Header -->
  <header class="max-w-xl bg-white shadow">
    <span>cdcd</span>
    <div class="container mx-auto flex items-center justify-between px-4 py-3">
      <h1 class="text-2xl font-bold">My Webcomic</h1>
      <nav class="space-x-4">
        <a href="#" class="text-blue-600 hover:underline">Home</a>
        <a href="#" class="hover:underline">Archive</a>
        <a href="#" class="hover:underline">About</a>
      </nav>
    </div>
  </header>

  <!-- Main Comic Section -->
  <main class="container max-w-xl flex-grow px-4 py-10">
    <div class="mb-6 text-center">
      <h2 class="mb-2 text-3xl font-semibold">Episode 12: The Duckening</h2>
      <p class="text-gray-500">April 21, 2025</p>
    </div>

    <div class="flex justify-center">
      <img
        src="https://picsum.photos/id/146/800/800"
        alt="Webcomic"
        class="h-auto max-w-full rounded-xl shadow-lg"
      />
    </div>

    <!-- Navigation -->
    <div class="mt-8 flex items-center justify-between text-lg">
      <a href="#" class="text-blue-500 hover:underline">&larr; Previous</a>
      <a href="#" class="text-blue-500 hover:underline">Next &rarr;</a>
    </div>
  </main>

  <!-- Footer -->
  <footer class="mt-10 max-w-xl bg-white shadow-inner">
    <div class="container mx-auto px-4 py-6 text-center text-sm text-gray-500">
      &copy; 2025 My Webcomic. All rights reserved.
    </div>
  </footer>
{% endblock %}
